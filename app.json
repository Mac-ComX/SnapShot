{
  "expo": {
    "name": "SnapSpot",
    "slug": "snapspot",
    "version": "1.2.6",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/fbdb00e5-1b93-4f83-a446-6f076ee4fb75"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "SnapSpot a besoin d'accéder à votre caméra pour prendre des photos.",
        "NSMicrophoneUsageDescription": "SnapSpot a besoin d'accéder à votre microphone pour enregistrer des vidéos."
      },
      "bundleIdentifier": "com.SnapSpot.app"
    },
    "android": {
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.SnapSpot.app",
      "versionCode": 1
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SnapSpot to access your camera",
          "microphonePermission": "Allow SnapSpot to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
